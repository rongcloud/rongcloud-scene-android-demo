<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <!--以默认ActionBar 高度 56dp为基准 设置参数-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/basis_shape_search"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25.2dp"
            android:layout_height="25.2dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="8.4dp"
            android:layout_marginRight="8.4dp"
            android:src="@drawable/svg_search" />

        <com.basis.widget.SearchEditText
            android:id="@+id/et_search"
            style="@style/main_primary_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/basis_search_hint"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/iv_search_delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="5.6dp"
            android:src="@drawable/svg_search_clear" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_search"
        style="@style/main_secondary_13"
        android:layout_width="@dimen/basis_bar_size"
        android:layout_height="28dp"
        android:layout_marginLeft="11.2dp"
        android:background="@drawable/basis_selector_mainblue_solid"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/basis_search" />

</merge>