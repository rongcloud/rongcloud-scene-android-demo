<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    tools:background="#123">

    <com.faceunity.nama.widget.CircleImageView
        android:id="@+id/iv_sticker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_sticker_selector"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="#345" />

    <ImageView
        android:id="@+id/iv_download"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@mipmap/icon_control_download"
        app:layout_constraintBottom_toBottomOf="@id/iv_sticker"
        app:layout_constraintEnd_toEndOf="@id/iv_sticker" />

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/icon_control_loading"
        app:layout_constraintBottom_toBottomOf="@id/iv_sticker"
        app:layout_constraintEnd_toEndOf="@id/iv_sticker"
        app:layout_constraintStart_toStartOf="@id/iv_sticker"
        app:layout_constraintTop_toTopOf="@id/iv_sticker" />

</androidx.constraintlayout.widget.ConstraintLayout>