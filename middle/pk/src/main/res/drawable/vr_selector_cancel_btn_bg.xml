<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/basis_15px" />
            <stroke android:width="1.5px" android:color="#E46C6ECA" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/basis_15px" />
            <stroke android:width="1.5px" android:color="#E46C6ECA" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/basis_15px" />
            <stroke android:width="1.5px" android:color="#E46C6ECA" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- 半径 -->
            <corners android:radius="@dimen/basis_15px" />
            <!-- 填充的颜色 -->
            <solid android:color="#A46C6ECA" />
        </shape>
    </item>

</selector>