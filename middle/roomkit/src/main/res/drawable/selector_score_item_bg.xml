<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingDefaultResource">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#C4C6FF" />
            <!-- 形状颜色（如果需要的是空心矩形, 则形状颜色设置为透明） -->
            <solid android:color="#F5F4FF" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#C4C6FF" />
            <!-- 形状颜色（如果需要的是空心矩形, 则形状颜色设置为透明） -->
            <solid android:color="#F5F4FF" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#E5E6E7" />
            <!-- 形状颜色（如果需要的是空心矩形, 则形状颜色设置为透明） -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</selector>
