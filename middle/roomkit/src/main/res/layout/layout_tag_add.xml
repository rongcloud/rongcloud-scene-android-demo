<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tag"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/basis_35px"
    android:paddingTop="@dimen/basis_15px"
    android:paddingRight="@dimen/basis_35px"
    android:paddingBottom="@dimen/basis_15px">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn"
        android:layout_width="@dimen/basis_30px"
        android:layout_height="@dimen/basis_30px"
        app:srcCompat="@drawable/ic_tag_add" />
</LinearLayout>