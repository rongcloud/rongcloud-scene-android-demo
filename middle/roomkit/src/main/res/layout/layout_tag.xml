<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tag"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/basis_20px"
    android:paddingTop="@dimen/basis_12px"
    android:paddingRight="@dimen/basis_20px"
    android:paddingBottom="@dimen/basis_12px">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_tag"
        style="@style/main_white_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn"
        android:layout_width="@dimen/basis_30px"
        android:layout_height="@dimen/basis_30px"
        android:layout_marginLeft="@dimen/basis_10px"
        app:srcCompat="@drawable/ic_tag_delete" />


</LinearLayout>