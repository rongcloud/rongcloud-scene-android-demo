<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basis_bg"
    tools:ignore="ResourceName">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_cover_id"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="#FF0099FF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/RoundedStyle" />

    <TextView
        android:id="@+id/tv_community_name"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:paddingStart="15dp"
        android:paddingTop="7.5dp"
        android:paddingEnd="15dp"
        android:text="融云实时社区"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_cover_id"
        android:background="@drawable/cmu_selector_community_btn_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cmu_create" />

        <TextView
            style="@style/main_primary_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/cmu_str_create" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/find"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/create"
        android:background="@drawable/cmu_selector_community_btn_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/svg_find_icon" />

        <TextView
            style="@style/main_primary_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/cmu_str_find" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>