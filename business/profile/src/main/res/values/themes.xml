<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/basis_white</item>
        <item name="colorAccent">#0099FF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="MyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/colorPrimary</item>
    </style>

    <!--  login 界面 EditText 样式-->
    <style name="LoginEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/login_edit_text_background</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="hintTextColor">#9B9B9B</item>
    </style>


    <style name="Theme.AppTheme.NoAction" parent="Theme.AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppTheme.LauncherActivity" parent="Theme.AppTheme.NoAction">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.LoginStyle" parent="Theme.AppTheme.NoAction">
        <item name="editTextStyle">@style/LoginEditTextStyle</item>
    </style>

</resources>