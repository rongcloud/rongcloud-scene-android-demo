<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item android:bottom="5dp" android:right="5dp" android:start="5dp" android:top="5dp">
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="#0099FF" />
                </shape>
            </item>
            <item android:bottom="8dp" android:right="8dp" android:start="8dp" android:top="8dp">
                <shape android:shape="oval">
                    <solid android:color="#0099FF" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="5dp" android:right="5dp" android:start="5dp" android:top="5dp">
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="#0099FF" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>