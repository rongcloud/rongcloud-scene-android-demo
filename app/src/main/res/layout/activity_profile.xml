<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/ll_item_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/basis_15sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/main_primary_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_registered"
            android:drawablePadding="@dimen/basis_20px"
            android:text="@string/str_rejster_coms" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:src="@drawable/ic_right" />
    </LinearLayout>

    <View style="@style/basis_main_divider" />

    <LinearLayout
        android:id="@+id/ll_item_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basis_15sp"
        android:layout_marginBottom="@dimen/basis_15sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/main_primary_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_private"
            android:drawablePadding="@dimen/basis_20px"
            android:text="@string/str_privite_coms" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:src="@drawable/ic_right" />
    </LinearLayout>

    <View style="@style/basis_main_divider" />

    <LinearLayout
        android:id="@+id/ll_item_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basis_15sp"
        android:layout_marginBottom="@dimen/basis_15sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/main_primary_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_uninit"
            android:drawablePadding="@dimen/basis_20px"
            android:text="@string/str_uninit_coms" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:src="@drawable/ic_right" />
    </LinearLayout>

    <View style="@style/basis_main_divider" />

    <LinearLayout
        android:id="@+id/ll_item_fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basis_15sp"
        android:layout_marginBottom="@dimen/basis_15sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/main_primary_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="@dimen/basis_20px"
            android:text="@string/str_logout" />
    </LinearLayout>

    <View style="@style/basis_main_divider" />
</LinearLayout>
